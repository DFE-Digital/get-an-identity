@page "/sign-in/register/name"
@model TeacherIdentity.AuthServer.Pages.SignIn.Register.Name
@{
    ViewBag.Title = "Your name";
}

@section BeforeContent {
    <govuk-back-link href="@Model.BackLink" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RegisterName()" method="post" asp-antiforgery="true">
            <h1 class="govuk-heading-l">@ViewBag.Title</h1>

            <govuk-input asp-for="FirstName" spellcheck="false" autocomplete="given-name" label-class="govuk-label--s" />

            <govuk-input asp-for="MiddleName" spellcheck="false" autocomplete="additional-name" label-class="govuk-label--s" />

            <govuk-input asp-for="LastName" spellcheck="false" autocomplete="family-name" label-class="govuk-label--s" />

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>

