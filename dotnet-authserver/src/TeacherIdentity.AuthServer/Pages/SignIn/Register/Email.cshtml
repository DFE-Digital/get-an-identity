@page "/sign-in/register/email"
@model TeacherIdentity.AuthServer.Pages.SignIn.Register.EmailModel
@{
    ViewBag.Title = "Your email address";
}

@if (Model.ShowBackLink)
{
    @section BeforeContent {
        <govuk-back-link data-testid="page-back-link" href="@Model.BackLink" />
    }
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RegisterEmail()" method="post" asp-antiforgery="true">
            <govuk-input asp-for="Email" type="email" autocomplete="email" label-class="govuk-label--l">
                <govuk-input-label is-page-heading="true" />
            </govuk-input>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
