@page "/sign-in/register/phone"
@model TeacherIdentity.AuthServer.Pages.SignIn.Register.Phone
@{
    ViewBag.Title = "Your mobile number";
}

@section BeforeContent {
    <govuk-back-link href="@LinkGenerator.RegisterEmailConfirmation()" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RegisterPhone()" method="post" asp-antiforgery="true">
            <h1 class="govuk-heading-xl">@ViewBag.Title</h1>

            <p>Add your mobile number to make your account more secure. Weâ€™ll send a security code to this number by text message.</p>

            <govuk-input asp-for="MobileNumber" type="tel" autocomplete="tel">
                <govuk-input-label class="govuk-label--s" />
            </govuk-input>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
