@page "/sign-in/register/phone/{handler?}"
@model TeacherIdentity.AuthServer.Pages.SignIn.Register.Phone
@{
    ViewBag.Title = "Your mobile number";
}

@section BeforeContent {
    <govuk-back-link href="@Model.BackLink" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RegisterPhone()" method="post" asp-antiforgery="true">
            <h1 class="govuk-heading-l">@ViewBag.Title</h1>

            <p>Add your mobile number to make your account more secure. Weâ€™ll send a security code to this number by text message.</p>

            <govuk-input
                asp-for="MobileNumber"
                type="tel"
                autocomplete="tel"
                input-class="govuk-input--extra-letter-spacing"
                label-class="govuk-label--s" />

            @* Pressing the Enter key will submit the first submit button - make sure it's the default action *@
            <button type="submit" class="govuk-!-display-none"></button>

            <govuk-details>
                <govuk-details-summary>I do not have access to a mobile phone</govuk-details-summary>
                <govuk-details-text>
                    <govuk-button type="submit" class="govuk-button--secondary" formaction="@LinkGenerator.RegisterPhoneContinueWithout()">
                        Continue without it
                    </govuk-button>
                </govuk-details-text>
            </govuk-details>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
