@page "/sign-in/email-confirmation"
@model TeacherIdentity.AuthServer.Pages.SignIn.EmailConfirmationModel
@{
    ViewBag.Title = "Confirm your email address";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.EmailConfirmation()" method="post" asp-antiforgery="true">
            <h1 class="govuk-heading-xl">Confirm your email address</h1>

            <p>Weâ€™ve emailed a confirmation code to <span data-testid="email">@Model.Email</span></p>

            <govuk-input asp-for="Code" input-class="govuk-!-width-one-quarter" pattern="[0-9]*" inputmode="numeric" autocomplete="one-time-code">
                <govuk-input-label class="govuk-label--s" />
            </govuk-input>

            <p>
                <a href="@LinkGenerator.ResendEmailConfirmation()">I have not received an email</a>
            </p>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>
