@page "/account/phone"
@model TeacherIdentity.AuthServer.Pages.Account.Phone.PhonePage
@{
    ViewBag.Title = "Your mobile number";
}

@section BeforeContent {
    <govuk-back-link href="@LinkGenerator.Account(Model.ClientRedirectInfo)" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.AccountPhone(Model.ClientRedirectInfo)" method="post" asp-antiforgery="true">
            <h1 class="govuk-heading-xl">@ViewBag.Title</h1>

            <p>Weâ€™ll send a security code to this number by text message.</p>

            <govuk-input asp-for="MobileNumber" type="tel" autocomplete="tel">
                <govuk-input-label class="govuk-label--s" />
            </govuk-input>

            <govuk-button type="submit">Continue</govuk-button>
        </form>
    </div>
</div>

