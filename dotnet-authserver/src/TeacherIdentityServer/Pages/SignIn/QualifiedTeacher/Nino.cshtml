@page "/dqt/nino"
@model TeacherIdentityServer.Pages.SignIn.QualifiedTeacher.NinoModel
@{
    ViewBag.Title = "What is your National Insurance number?";
}

<form action="@Url.QualifiedTeacherNino()" method="post" asp-antiforgery="true">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <govuk-input asp-for="Nino" input-class="govuk-input--width-10">
        <govuk-input-label class="govuk-label--xl" />
        <govuk-input-hint>
          It’s on your National Insurance card, benefit letter, payslip or P60. For example, ‘QQ 12 34 56 C’.
        </govuk-input-hint>
      </govuk-input>

      <govuk-details>
        <govuk-details-summary>I don’t know my National Insurance number</govuk-details-summary>
        <govuk-details-text>
          <p class="govuk-body">You can <a href="https://www.gov.uk/lost-national-insurance-number" class="govuk-link" target="_blank">find a lost National Insurance number</a>.</p>

          <p class="govuk-body">Or you can continue without it.</p>
    
          <govuk-button-link href="@Url.QualifiedTeacherTrn()" class="govuk-!-margin-bottom-0 govuk-button--secondary">Continue without it</govuk-button-link>
        </govuk-details-text>
      </govuk-details>

      <govuk-button type="submit">Continue</govuk-button>
    </div>
  </div>
</form>
