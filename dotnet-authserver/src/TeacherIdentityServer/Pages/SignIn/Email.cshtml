@page "/email"
@model TeacherIdentityServer.Pages.SignIn.EmailModel
@{
    ViewBag.Title = "Your email address";
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <form action="@Url.Email()" method="post" asp-antiforgery="true">
      <govuk-input asp-for="Email" type="email">
        <govuk-input-label class="govuk-label--xl" is-page-header="true" />
      </govuk-input>

      <govuk-button type="submit">Continue</govuk-button>
    </form>
  </div>
</div>
